<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/warning" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:text="设置密码需先验证手机号" />
            <TextView
                android:id="@+id/password_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:text="186 **** 1076" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="center|right"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="验证码:" />

            <EditText
                android:id="@+id/password_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="输入验证码"/>
            <TextView
                android:id="@+id/password_code_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:background="@drawable/btn_background"
                android:text="获取验证码" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center|right"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="旧密码:" />

            <EditText
                android:id="@+id/password_p1_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:hint="输入旧密码"/>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center|right"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="新密码:" />

            <EditText
                android:id="@+id/password_p2_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="输入新密码"/>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:textColor="@color/gray"
                android:gravity="center|right"
                android:textSize="18sp"
                android:text="确认新密码:" />

            <EditText
                android:id="@+id/password_p3_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:hint="确认新密码"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_code_commit_lay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/big_btn_backgroud"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_commit_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/sec" />
            <ImageView
                android:id="@+id/password_rotate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/ciclyloading"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="提交" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>