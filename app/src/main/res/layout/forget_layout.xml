<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_shut_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:src="@drawable/shut_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:layout_marginTop="2.0dip"
            android:text="忘记密码"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/forget_pw_old_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_weight="1"
                android:hint="请输入手机号码" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/forget_code_lay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/forget_code_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="请输入验证码" />
        </LinearLayout>
            <LinearLayout

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">
            <TextView
                android:id="@+id/forget_time_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@drawable/tv_background"
                android:gravity="center"
                android:text="60s"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/forget_pw_new_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center|left"
                android:layout_weight="1"
                android:hint="请输入新密码" />

        </LinearLayout>

        <Button
            android:id="@+id/forget_next_btn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/confirm_step_shade"
            android:text="下一步" />


    </LinearLayout>
</RelativeLayout>