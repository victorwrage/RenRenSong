<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/phone"/>


        <RelativeLayout
            android:id="@+id/user_email_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/sliding_item_shade"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:textColor="@color/word1"
                android:textSize="22sp"
                android:text="您当前的手机号码是137******"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/phone_title_tv"
                android:textColor="@color/gray"
                android:text="        更换后当前账户余额，信用分不变，修改后需使用新的手机号登录\r\n仅支持修改到未注册手机号，如果手机号已注册，请注销当前账号，并登陆要修改的手机号进行注销"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/phone_change_lay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/big_btn_backgroud"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/change_phone"/>
            <TextView
                android:id="@+id/tv_changephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="更换手机号"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>