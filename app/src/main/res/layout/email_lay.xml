<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">




        <RelativeLayout
            android:id="@+id/user_email_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/sliding_item_shade"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/email_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="22sp"
                android:text="您当前没有绑定邮箱"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/email_title_tv"
                android:textColor="@color/gray"
                android:text="        绑定邮箱后，可用于接受人人送官方通知，以及后续接收账户安全信息"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/email_email_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="邮箱地址" />

            <EditText
                android:id="@+id/email_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:hint="请输入邮箱地址"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_change_lay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/big_btn_backgroud"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/email_change_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/change_phone"/>
            <ImageView
                android:id="@+id/email_rotate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/ciclyloading"
                />
            <TextView
                android:id="@+id/tv_changephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="绑定邮箱"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>