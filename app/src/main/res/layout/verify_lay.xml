<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/card" />

            <LinearLayout
                android:id="@+id/verify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:text=" 身份证认证" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/gray"
                    android:text=" 仅支持中国居民身份证进行认证" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/verify_name_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"

                android:text="真实姓名" />

            <EditText
                android:id="@+id/verify_name_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:hint="填写姓名"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/verify_num_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"

                android:text="身份证号" />

            <EditText
                android:id="@+id/verify_num_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:hint="填写18位身份证号"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/verify_do_lay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/big_btn_backgroud"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/verify_commit_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/commit_verify" />
            <ImageView
                android:id="@+id/verify_rotate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/ciclyloading"
                />
            <TextView
                android:id="@+id/verify_commit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="提交审核" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>