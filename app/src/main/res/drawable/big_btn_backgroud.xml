<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#994682B4"
                android:startColor="#994682c4" />
            <size android:height="60dp" android:width="320dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#FF4682B4"
                android:startColor="#FF4682B4" />
            <size android:height="60dp" android:width="320dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FF4682B4"
                android:startColor="#FF4682c4" />
            <size android:height="60dp" android:width="320dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#994682B4"
                android:startColor="#994682c4" />
            <size android:height="60dp" android:width="320dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
